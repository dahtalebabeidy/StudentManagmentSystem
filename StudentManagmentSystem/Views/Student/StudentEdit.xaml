<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentManagmentSystem.Views.Student.StudentEdit">
    <ContentPage.Content>
        <StackLayout Padding="15" VerticalOptions="CenterAndExpand">
            <Label Text="Modifier l'étudiant" 
                HorizontalOptions="Center"
                  FontSize="Large"/>
            <Image x:Name="StudentImage"
                   HeightRequest="150" BackgroundColor="AliceBlue">

                <Image.GestureRecognizers>
                    <TapGestureRecognizer x:Name="ImageTap"
                                          Tapped="ImageTap_Tapped"/>
                </Image.GestureRecognizers>
            </Image>


            <Entry x:Name="TxtId"
                   IsVisible="false"/>

            <Entry x:Name="TxtName"
                   Placeholder="Entrer le nom de l'étudiant"/>
            <Entry x:Name="TxtEmail"
                   Placeholder="Entrer l'adresse e-mail de l'étudiant"
                  />
            <Button Text="Modifier"
                    x:Name="ButtonUpdate"
                    CornerRadius="15"
                    Clicked="ButtonUpdate_Clicked" />


        </StackLayout>

    </ContentPage.Content>
</ContentPage>