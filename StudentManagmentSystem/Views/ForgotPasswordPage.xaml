<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentManagmentSystem.Views.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Padding="15"
              VerticalOptions="Center"
              >
            <Label Text="réinitialiser le mot de passe"
            FontSize="Large"
            VerticalOptions="Center"
            HorizontalOptions="Center"></Label>
            <Entry Placeholder="Enterer votre adresse e-mail"
            x:Name="TxtEmail"></Entry>
            <Button Text="Envoyer le lien"
             x:Name="ButtonSendLink"
             Clicked="ButtonSendLink_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>